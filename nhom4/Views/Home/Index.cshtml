    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <div class="logo">
                <a href="/">FITSUP</a>
            </div>
            <nav class="nav-desktop">
                <ul>
                    <li><a href="#shop">Shop</a></li>
                    <li><a href="#best-sellers">Best Sellers</a></li>
