    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Fuel Your Fitness Journey</h1>
            <p>Shop the best supplements backed by science</p>
            <button class="cta-button">Shop Now</button>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="featured-products">
        <h2>Featured Products</h2>
        <div class="products-grid">
            <!-- Product cards will be dynamically added here -->
        </div>
    </section>

    <!-- Top Deals Carousel -->
    <section class="top-deals">
        <h2>Top Deals</h2>
        <div class="carousel-container">
            <button class="carousel-arrow prev"><i class="fas fa-chevron-left"></i></button>
            <div class="carousel">
                <!-- Carousel items will be dynamically added here -->
            </div>
            <button class="carousel-arrow next"><i class="fas fa-chevron-right"></i></button>
        </div>
    </section>

    <!-- Goal Categories -->
    <section class="goal-categories">
        <h2>Shop By Goal</h2>

        <div class="categories-grid">
            <div class="category-card">
                <img src="https://via.placeholder.com/150" alt="Build Muscle">
                <h3>Build Muscle</h3>
                <a href="#" class="category-link">Shop Now</a>
            </div>
            <div class="category-card">
                <img src="https://via.placeholder.com/150" alt="Lose Fat">
                <h3>Lose Fat</h3>
                <a href="#" class="category-link">Shop Now</a>
            </div>
            <div class="category-card">
                <img src="https://via.placeholder.com/150" alt="Improve Energy">
                <h3>Improve Energy</h3>
                <a href="#" class="category-link">Shop Now</a>
            </div>
            <div class="category-card">
                <img src="https://via.placeholder.com/150" alt="Recovery">
                <h3>Recovery</h3>
                <a href="#" class="category-link">Shop Now</a>
            </div>
        </div>
    </section>

    <!-- Newsletter -->
    <section class="newsletter">
        <div class="newsletter-content">
            <h2>Stay Updated</h2>
            <p>Subscribe to our newsletter for exclusive deals and fitness tips</p>
            <form id="newsletter-form" class="newsletter-form">
                <input type="email" placeholder="Enter your email" required>
                <button type="submit">Subscribe</button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-column">
                <h3>About Us</h3>
